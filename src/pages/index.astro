---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.svelte';
---

<Layout title="Lambda Digital">
	<main>
		<Navbar/>
		<div id="hero">
			<div id="hero-left">
				<p id="tag">Reach new horizons.</p>
				<p id="expand">We build and maintain high performance websites for small businesses, at an affordable cost.</p>
				<button>let's get started! <img src="send-dark.svg" alt=""></button>
			</div>
		</div>
	</main>
</Layout>

<style>
	#hero {
		background-image: url('hero.png');
		background-size: cover;
		background-repeat: no-repeat;
		width: 100%;
		height: 450px;
	}

	#hero-left {
		box-sizing: border-box;
		position: absolute;
		display: flex;
		flex-direction: column;
		justify-content: space-around;
		width: 50%;
		height: 450px;
		background-color: rgba(39, 41, 74, 0.8);
		backdrop-filter: blur(10px);
		padding: 24px 48px 64px 48px;
	}

	#tag {
		color: white;
		mix-blend-mode: screen;
		font-family: 'Outfit', sans-serif;
		font-size: 72px;
		font-weight: 900;
	}

	#expand {
		font-family: 'Outfit', sans-serif;
		font-weight: 400;
		color: white;
		font-size: 18px;
		width: 80%;
	}

	button {
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		flex-direction: row;
		align-items: center;
		padding: 12px 32px;
		width: 275px;
		height: 55px;
		
		font-family: 'Outfit', sans-serif;
		color: #27294A;
		font-weight: 400;
		font-size: 24px;
		white-space: nowrap;
		


		background: #F3E9AC;

		border: 2px solid #F3E9AC;
		border-radius: 50px;
	}
</style>
